{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "RuSS",
    "version": "0.1.0",
    "identifier": "com.tauri.dev",
    "build": {
        "frontendDist": "..",
        "devUrl": "http://localhost:5173",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "title": "RuSS",
                "width": 800,
                "height": 500,
                "resizable": true,
                "fullscreen": false,
                "decorations": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
